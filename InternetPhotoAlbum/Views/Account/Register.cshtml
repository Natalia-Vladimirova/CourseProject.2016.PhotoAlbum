@model InternetPhotoAlbum.Models.RegisterModel

@{
    ViewBag.Title = "Register";
}

<h2>Registration</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal lead" })) 
{
    @Html.AntiForgeryToken()

    <div class="col-md-12">

        @Html.ValidationSummary(true)

        <div class="form-group">
            <div class="col-md-3">
                @Html.LabelFor(model => model.Login, new { @class = "control-label" })
            </div>
            <div class="col-md-9">
                @Html.EditorFor(model => model.Login, new { @class = "form-control input-lg" })
                @Html.ValidationMessageFor(model => model.Login)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-3">
                @Html.LabelFor(model => model.FirstName, new { @class = "control-label" })
            </div>
            <div class="col-md-9">
                @Html.EditorFor(model => model.FirstName, new { @class = "form-control input-lg" })
                @Html.ValidationMessageFor(model => model.FirstName)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-3">
                @Html.LabelFor(model => model.LastName, new { @class = "control-label" })
            </div>
            <div class="col-md-9">
                @Html.EditorFor(model => model.LastName, new { @class = "form-control input-lg" })
                @Html.ValidationMessageFor(model => model.LastName)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-3">
                @Html.LabelFor(model => model.DateOfBirth, new { @class = "control-label" })
            </div>
            <div class="col-md-9">
                @Html.EditorFor(model => model.DateOfBirth, new { @class = "form-control input-lg" })
                @Html.ValidationMessageFor(model => model.DateOfBirth)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-3">
                @Html.LabelFor(model => model.Password, new { @class = "control-label" })
            </div>
            <div class="col-md-9">
                @Html.EditorFor(model => model.Password, new { @class = "form-control input-lg" })
                @Html.ValidationMessageFor(model => model.Password)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-3">
                @Html.LabelFor(model => model.PasswordConfirm, new { @class = "control-label" })

            </div>
            <div class="col-md-9">
                @Html.EditorFor(model => model.PasswordConfirm, new { @class = "form-control input-lg" })
                @Html.ValidationMessageFor(model => model.PasswordConfirm)
            </div>
        </div>

        <div>
            <input type="submit" value="Register" class="btn btn-primary btn-lg" />
        </div>
    </div>
}

