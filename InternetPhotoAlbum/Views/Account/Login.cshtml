@model InternetPhotoAlbum.Models.LoginModel

@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

@using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal lead" }))
{
    @Html.AntiForgeryToken()

    <div class="col-md-12">

        @Html.ValidationSummary(true)
        <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />

        <div class="form-group">
            <div class="col-md-3">
                @Html.LabelFor(model => model.Login, new { @class = "control-label" })
            </div>
            <div class="col-md-9">
                @Html.EditorFor(model => model.Login, new { @class = "form-control input-lg" })
                @Html.ValidationMessageFor(model => model.Login)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-3">
                @Html.LabelFor(model => model.Password, new { @class = "control-label" })
            </div>
            <div class="col-md-9">
                @Html.EditorFor(model => model.Password, new { @class = "form-control input-lg" })
                @Html.ValidationMessageFor(model => model.Password)
            </div>
        </div>
        <div>
            <input type="submit" value="Sign in" class="btn btn-primary btn-lg" />
        </div>
    </div>
}

