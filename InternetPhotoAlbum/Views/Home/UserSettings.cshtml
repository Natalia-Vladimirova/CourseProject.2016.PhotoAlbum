@model InternetPhotoAlbum.Models.User

@{
    ViewBag.Title = "Settings";
}

<h2>Settings</h2>
<h5>@Html.ActionLink("Cancel", "Index")</h5>
<hr />

@using (Html.BeginForm("UserSettings", "Home", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="row form-horizontal">
        <div class="col-md-6 form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                <div class="col-md-3">
                    @Html.LabelFor(model => model.FirstName, new { @class = "control-label" })
                </div>
                <div class="col-md-9">
                    @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-3">
                    @Html.LabelFor(model => model.LastName, new { @class = "control-label" })
                </div>
                <div class="col-md-9">
                    @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-3">
                    @Html.LabelFor(model => model.DateOfBirth, new { @class = "control-label" })
                </div>
                <div class="col-md-9">
                    @Html.EditorFor(model => model.DateOfBirth, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DateOfBirth, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-3">
                    <span class="glyphicon glyphicon-picture"></span>
                    <label class="control-label">Photo</label>
                </div>
                <div class="col-md-9">
                    <input type="file" name="uploadImage" @*accept="image/*,image/jpeg"*@ />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-3">
                    <span class="glyphicon glyphicon-remove"></span>
                    <label class="control-label">Delete photo</label>
                </div>
                <div class="col-md-9">
                    <input type="checkbox" name="removePhoto" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save changes" class="btn btn-default" />
                </div>
            </div>
        </div>
        <div class="col-md-6 form-horizontal">
            <div class="form-group">
                @if (Model?.UserPhoto != null)
                {
                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.UserPhoto)" />
                }
                else
                {
                    <p class="text-muted text-center">No photo...</p>
                }
            </div>
        </div>
    </div>
}

